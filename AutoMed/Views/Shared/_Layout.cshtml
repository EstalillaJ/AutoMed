<!DOCTYPE html>
<html>
@{ 
    bool isAuthenticated = User.Identity.IsAuthenticated;
    bool isAdmin = User.IsInRole("Administrator");
    bool isManager = User.IsInRole("Manager");
    bool isEmployee = User.IsInRole("Employee");
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AutoMed Customer Intake</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css" >
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <form action="/Account/LogOff" class="navbar-right" id="logoutForm" method="post">
        @Html.AntiForgeryToken()
    </form>

    <p id="header">AutoMed</p>
    <div class="container body-content">
        <div class="col-md-2 navbar navbar-fixed-left">

            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav">
                    <li><a id="customers-link" href="/Customers" class="btn btn-sm">Customers</a> </li>
                    @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                    {
                        <li><a id="quotes-link" href="/Quotes" class="btn btn-sm">Quotes</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a id="locations-link" href="/Locations" class="btn btn-sm">Locations</a></li>
                        <li><a id="reports-link" href="/Report/Create" class="btn btn-sm">Reports</a></li>
                        <li><a id="employees-link" href="/Account" class="btn btn-sm">Employees</a></li>
                    }
                        <li>
                            <a id="changepassword-link" href="/Manage/ChangePassword" class="btn btn-sm">Change Password</a>
                        </li>
                        <li><a class="btn btn-sm" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
</ul>
            }
        </div>
        <div class="col-md-10">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AutoMed</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
