@using AutoMed.DAL;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@model AutoMed.Models.DataModels.AutoMedUser

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>RegisterViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Role
        </dt>

        <dd>
            @{ 

                ApplicationDbContext db = new ApplicationDbContext();
                RoleManager<IdentityRole>
                roleManager = new RoleManager<IdentityRole>(new RoleStore<IdentityRole>(db));
                string roleName = roleManager.FindById(Model.Roles.First().RoleId).Name;
            }
                @roleName
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
@section Scripts {
    <script type="text/javascript">
        $("#employees-link").addClass("active");
    </script>
}
