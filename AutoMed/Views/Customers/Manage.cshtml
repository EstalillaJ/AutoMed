@model AutoMed.Models.DataModels.Customer



<head>
    <!-- DataTables CDN -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>

<body>





<h1> @Html.DisplayFor(modelItem => Model.FirstName)  @Html.DisplayFor(modelItem => Model.LastName)</h1>
    @Html.ActionLink("Back to Customers", "Index", "Customers")


    <hr/>    


<h2>Vehicles</h2>
        @Html.ActionLink("Create", "Create", "Vehicles", new { id = Model.Id }, new { @class = "btn btn-primary" })

                            
                                    <table class="table table-striped" id="vehicles-table">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Vin
                                                </th>
                                                <th>
                                                    Make
                                                </th>
                                                <th>
                                                    Model
                                                </th>
                                                <th>
                                                    Color
                                                </th>
                                                <th>
                                                    Year
                                                </th>
                                                <th>
                                                    License Plate
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @for (int i = 0; i < Model.Vehicles.Count; i++)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.Vehicles[i].Vin)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.Vehicles[i].Make)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.Vehicles[i].Model)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.Vehicles[i].Color)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.Vehicles[i].Year)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => Model.Vehicles[i].LicensePlate)
                                                    </td>
                                                    <td class="text-right">
                                                        @if (User.IsInRole("Employee"))
                                                        {
                                                            @Html.ActionLink("Details", "Details", "Vehicles", new { id = Model.Vehicles[i].Id }, new { @class = "btn btn-sm btn-default" })
                                                            @Html.Raw(" | ")
                                                        }
                                                        @if (User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Administrator"))
                                                        {
                                                            @Html.ActionLink("Edit", "Edit", "Vehicles", new { id = Model.Vehicles[i].Id }, new { @class = "btn btn-sm btn-default" })
                                                        }
                                                        @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                                                        {
                                                            @Html.Raw(" | ")
                                                            @Html.ActionLink("Delete", "Delete", "Vehicles", new { id = Model.Vehicles[i].Id }, new { @class = "btn btn-sm btn-danger" })
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                <h2>Quotes</h2>
 
        @Html.ActionLink("Create", "Create", "Quotes", new { id = Model.Id }, new { @class = "btn btn-primary" })
                        
                                <table class="table table-striped" id="quotes-table">
                                    <thead>
                                        <tr>
                                            <th>
                                                Date Created
                                            </th>
                                            <th>
                                                Date Review
                                            </th>
                                            <th>
                                                Discount %
                                            </th>
                                            <th>
                                                Total Cost
                                            </th>
                                            <th>
                                                Approval
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int j = 0; j < Model.Quotes.Count; j++)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.Quotes[j].DateCreated)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.Quotes[j].DateReviewed)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.Quotes[j].DiscountPercentage)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.Quotes[j].EligibleCost)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Model.Quotes[j].Approval)
                                                </td>
                                                <td class="text-right">
                                                    @if (User.IsInRole("Employee"))
                                                    {
                                                        @Html.ActionLink("Details", "Details", "Quotes", new { id = Model.Quotes[j].Id }, new { @class = "btn btn-sm btn-default" })
                                                    }
                                                    @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                                                    {
                                                        @Html.ActionLink("Edit", "Edit", "Quotes", new { id = Model.Quotes[j].Id }, new { @class = "btn btn-sm btn-default" })
                                                        @Html.Raw(" | ")
                                                        @Html.ActionLink("Delete", "Delete", "Quotes", new { id = Model.Quotes[j].Id }, new { @class = "btn btn-sm btn-danger" })
                                                    }

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

            
            


</body>
@section Scripts {
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $("#customers-link").addClass("active");
        $('#vehicles-table').dataTable({
            "fnDrawCallback": function (oSettings) {
                if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {
                    $(oSettings.nTableWrapper).find('.dataTables_paginate').hide();
                    $(oSettings.nTableWrapper).find('.dataTables_length').hide();
                    $(oSettings.nTableWrapper).find('.dataTables_info').hide();
                }
            }
        });
        $('#quotes-table').dataTable({
            "fnDrawCallback": function (oSettings) {
                if (oSettings._iDisplayLength > oSettings.fnRecordsDisplay()) {
                    $(oSettings.nTableWrapper).find('.dataTables_paginate').hide();
                    $(oSettings.nTableWrapper).find('.dataTables_length').hide();
                    $(oSettings.nTableWrapper).find('.dataTables_info').hide();
                }
            }
        });
    </script>    
}