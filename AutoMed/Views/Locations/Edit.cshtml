@model AutoMed.Models.DataModels.Location

@{
    ViewBag.Title = "Edit";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" />

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Location</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <button class="btn btn-default" id="remove-row"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
        <button class="btn btn-default" id="add-row"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
        <table id="mappings-table" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Poverty Level
                    </th>
                    <th>
                        Associated Discount Percentage
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.BracketMappings.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.EditorFor(m => m.BracketMappings[i].PovertyLevel, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        <td>
                            @Html.EditorFor(m => m.BracketMappings[i].Discount, new { htmlAttributes = new { @class = "form-control" } })
                        </td>
                        @Html.HiddenFor(m => m.BracketMappings[i].Id)
                        <input data-val="true" data-val-required="The Id field is required." id=@string.Format("BracketMappings_{0}__LocationId", i) name=@string.Format("BracketMappings[{0}].LocationId", i) type="hidden" value=@Model.BracketMappings[i].LocationId>
                        <input name="BracketMappings.Index" value="@i" type="hidden" />
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        var table = $("#mappings-table").DataTable({
                        "paging": false,
                        "searching": false,
                        "info": false,
                        "ordering": false
                    });
        var count = @Model.BracketMappings.Count;
        var locationId = @Model.Id;
        var deletedMappings = 0;
        $("#add-row").click(function (event) {
            event.preventDefault();
            table.row.add([
                '<input class="form-control text-box single-line"' +
                               'data-val="true"' +
                               'data-val-number="Must be a number."' +
                               'id="BracketMappings_' + count + '__PovertyLevel" name="BracketMappings[' + count + '].PovertyLevel" type="text" value="">',
                '<input class="form-control text-box single-line"' +
                               'data-val="true"' +
                               'data-val-number="Must be a number."' +
                               'id="BracketMappings_' + count + '__Discount" name="BracketMappings[' + count + '].Discount" type="text" value="">'

            ]).draw(false);
            $("td").last().after('<input type=hidden id="BracketMappings_' + count + '__LocationId"  name="BracketMappings[' + count + '].LocationId" value="' + locationId + '">');
            $("td").last().after('<input type="hidden" name="BracketMappings.Index" value="'+ count + '" />');
            $("#remove-row").removeClass("disabled");
            count++;
        });
        $("#remove-row").click(function (event) {
            event.preventDefault();
            var idInput = $("#BracketMappings_" + (count - 1) + "__Id");
            if (idInput.length == 1) {
                idInput.attr("name", "deletedMappings[" + deletedMappings + "].Id").insertAfter($("#mappings-table"));
                deletedMappings++;
            }
            if (count > 1) {
                table.row(count-1).remove().draw(false);
                if (count == 2)
                    $("#remove-row").addClass("disabled");
                count--;
            }
        })
    </script>
}